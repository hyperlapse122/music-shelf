{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "member-access": true,
    "ordered-imports": true,
    "max-line-length": [
      true,
      150
    ],
    "member-ordering": true,
    "interface-name": true,
    "arrow-parens": true,
    "object-literal-sort-keys": true,
    "semicolon": true,
    "trailing-comma": true,
    "only-arrow-functions": true
  },
  "rulesDirectory": []
}
